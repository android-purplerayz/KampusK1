<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExamResult.ExamResultsDetails">

   <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="#0E6672"
        android:id="@+id/toolbar_examres"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnbackED"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_left_arrow_profile"
                android:layout_alignParentLeft="true" />
            <TextView
                android:id="@+id/tv_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Lalit Kala Academic ScholerShip"
                />


        </RelativeLayout>



    </android.support.v7.widget.Toolbar>



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_examres"
        app:layout_constraintVertical_bias="1.0">

        <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/examResImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/examresults_backimage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/img_joinED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:rotation="180"
                app:layout_constraintBottom_toBottomOf="@+id/examResImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_link"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tv_descED"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="30dp"
                android:text="@string/ipsum"
                android:background="#51BCA9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/examResImage" />

            <ImageView
                android:id="@+id/img_infoED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/round_back_layout"
                android:src="@drawable/ic_info"
                app:layout_constraintBottom_toBottomOf="@+id/tv_descED"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.025"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4" />

            <RelativeLayout
                android:id="@+id/rl1ED"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_descED"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"

                >

                <View
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:background="#068587"
                    android:layout_marginLeft="33dp"
                    />
                <ImageView
                    android:id="@+id/img_mapED"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/ic_sub"
                    android:layout_marginStart="8dp"/>


                <TextView
                    android:id="@+id/tv_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="#014D59"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@+id/img_mapED"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Subjects"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_XRsubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_loc"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toRightOf="@+id/img_mapED"
                    android:gravity="start"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Maths,Science ,Social Science and English" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl2ED"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rl1ED"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"

                >

                <View
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:background="#068587"
                    android:layout_marginLeft="33dp"
                    />

                <ImageView
                    android:id="@+id/img_eveED"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_eli"
                    android:layout_marginTop="8dp"/>


                <TextView
                    android:id="@+id/tv_eventED"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#014D59"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@+id/img_eveED"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Eligibility"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_eventsED"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Singning , Painting"
                    android:layout_toRightOf="@+id/img_eveED"
                    android:layout_below="@+id/tv_eventED"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl3ED"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rl2ED"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"

                >

                <View
                    android:layout_width="1dp"
                    android:layout_height="130dp"
                    android:background="#068587"
                    android:layout_marginLeft="33dp"
                    />

                <ImageView
                    android:id="@+id/img_proED"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_process"
                    android:layout_marginTop="8dp"/>


                <TextView
                    android:id="@+id/tv_prosED"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@+id/img_proED"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="#014D59"
                    android:text="Guidlines"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_Guidline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_prosED"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toRightOf="@+id/img_proED"
                    android:gravity="start"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="i. written exam conducted by state/UT.
                    ii. Students selected in state level exam appear for national level." />




            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl4ED"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rl3ED"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp">

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="#068587"
                    android:layout_marginLeft="33dp"
                    />

                <ImageView
                    android:id="@+id/img_govED"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/ic_govern"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"/>


                <TextView
                    android:id="@+id/tv_goveED"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="#014D59"
                    android:text="Governing Body"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/img_govED"
                    />

                <TextView
                    android:id="@+id/tv_govern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_goveED"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toRightOf="@+id/img_govED"
                    android:gravity="center_horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="State Board" />

            </RelativeLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>



</android.support.constraint.ConstraintLayout>